{% extends 'base.html.twig' %}

{% block body %}
    <h1>Models list</h1>

    <table class="table table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Ref</th>
                <th>Name</th>
                <th>User</th>
                <th>Category</th>
                <th>Image</th>                
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for model in models %}
            <tr>
                <td><a href="{{ path('show_model_show', { 'id': model.id }) }}">{{ model.id }}</a></td>
                <td>{{ model.ref }}</td>
                <td>{{ model.name }}</td>
                <td>{{ model.userid }}</td> 
                <td>{{ model.categoryid }}</td> 
                <td>{{ model.image }}</td>
                <td>
					<a href="{{ path('show_model_show', { 'id': model.id }) }}" type="button" class="btn btn-info" aria-label="Center Align">
						<span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span>
					</a>
					<a href="{{ path('show_model_edit', { 'id': model.id }) }}" type="button" class="btn btn-info" aria-label="Center Align">
						<span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
					</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
		{% if is_granted('ROLE_ADMIN') %}
            <a class="btn btn-primary" href="{{ path('show_model_new') }}">Create a new model</a>
        {% endif %}

{% endblock %}
