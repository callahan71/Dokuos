{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
		<div class="col-md-10">
			<h1>Model</h1>
		</div>
		<div class="col-md-1">
			<div class="col-md-offset-6 col-md-1">
			    {{ form_start(delete_form) }}
					<button type="submit" class="btn btn-danger">Delete</button>
				{{ form_end(delete_form) }}
			</div>
		</div>
	</div>

    <table class="table table-hover">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ model.id }}</td>
            </tr>
            <tr>
                <th>Ref</th>
                <td>{{ model.ref }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ model.name }}</td>
            </tr>
            <tr>
                <th>User</th>
                <td>{{ model.userid }}</td>
            </tr>
            <tr>
                <th>Category</th>
                <td>{{ model.categoryid }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ model.image }}</td>
            </tr>
        </tbody>
    </table>
	<a class="btn btn-default" href="{{ path('show_model_index') }}" role="button">Back to the list</a>

	<a class="btn btn-primary" href="{{ path('show_model_edit', { 'id': model.id }) }}" role="button">Edit</a>
    
    {# Listado de las zonas de este modelo #}
    <h2>Zones list</h2>
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Zone REF</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for zone in zones %}
            <tr>
                <td><a href="{{ path('show_model_zone_show', { 'id': zone.id }) }}">{{ zone.id }}</a></td>
                <td>{{ zone.zoneref }}</td>
                <td>
                    {#
					<a href="{{ path('show_model_zone_delete', { 'id': zone.id }) }}" type="button" class="btn btn-info" aria-label="Center Align">
						<span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
					</a>
                    #}
					<a href="{{ path('show_model_zone_edit', { 'id': zone.id }) }}" type="button" class="btn btn-info" aria-label="Center Align">
						<span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
					</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
        
    {% if is_granted('ROLE_ADMIN') %}
    <a class="btn btn-primary" href="{{ path('show_model_zone_new', { 'id': model.id }) }}" role="button">New</a>    
    {% endif %}    
  	
{% endblock %}
