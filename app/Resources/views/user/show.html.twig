{% extends 'base.html.twig' %}

{% block body %}
	<div class="row">
		<div class="col-md-10">
			<h1>Usuario {{ user.username }}</h1>
		</div>
		<div class="col-md-1">
			<div class="col-md-offset-6 col-md-1">
			    {{ form_start(delete_form) }}
					<button type="submit" class="btn btn-danger">Borrar</button>
				{{ form_end(delete_form) }}
			</div>
		</div>
	</div>

    <table class="table table-hover">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ user.username }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ user.password|slice(0,20) }}</td>
            </tr>
            <tr>
                <th>Rol</th>
                <td>{{ user.role }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Imagen</th>
                <td>{{ user.image }}</td>
            </tr>
        </tbody>
    </table>
    <hr>	
	<a class="btn btn-default" href="{{ path('show_user_index') }}" role="button">Volver</a>

	<a class="btn btn-primary" href="{{ path('show_user_edit', { 'id': user.id }) }}" role="button">Editar</a>

{% endblock %}