{% extends 'base.html.twig' %}

{% block body %}
    <h1>User list</h1>

	<table class="table table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Username</th>
                <th>Password</th>
                <th>Role</th>
                <th>Email</th>
                <th>Image</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td><a href="{{ path('show_user_show', { 'id': user.id }) }}">{{ user.id }}</a></td>
                <td>{{ user.username }}</td>
                <td>{{ user.password|slice(0,20) }}</td>
                <td>{{ user.role }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.image }}</td>
                <td>
					<a href="{{ path('show_user_show', { 'id': user.id }) }}" type="button" class="btn btn-info" aria-label="Center Align">
						<span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span>
					</a>
					<a href="{{ path('show_user_edit', { 'id': user.id }) }}" type="button" class="btn btn-info" aria-label="Center Align">
						<span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
					</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
	
	<a class="btn btn-primary" href="{{ path('show_user_new') }}">Create a new user</a>

{% endblock %}
