{% extends 'base.html.twig' %}

{% block body %}
    {% for message in app.flashes('notice') %}
        <div class="alert alert-primary" role="alert">
            {{ message }}
        </div>
    {% endfor %}
    <h1 class="text-center">Nuevo material</h1>

    {{ form_start(form, {'attr': {'class': 'form-horizontal'} }) }}
        <div class="form-group">
			<label class="col-md-4 control-label">Ref</label>
			<div class="col-md-5">
			  {{ form_widget(form.ref, {'attr': {'class': 'form-control'}}) }}
			</div>
		</div>
        <div class="form-group">
			<label class="col-md-4 control-label">Nombre</label>
			<div class="col-md-5">
			  {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
			</div>
		</div>
            
        {% if is_granted('ROLE_ADMIN') %}
        <div class="form-group">
			<label class="col-md-4 control-label">Usuario</label>
			<div class="col-md-5">
			  {{ form_widget(form.userid, {'attr': {'class': 'form-control'}}) }}
			</div>
		</div>
        {% endif %}
        
        <div class="form-group">
			<label class="col-md-4 control-label">Imagen</label>
			<div class="col-md-5">
			  {{ form_widget(form.image, {'attr': {'class': 'form-control'}}) }}
			</div>
		</div>
        <div class="form-group">
			<div class="col-md-offset-5 col-md-1">
			  <button type="submit" class="btn btn-primary">Crear</button>
			</div>
			<div class="col-md-3">
			  <a class="btn btn-default" href="{{ path('show_material_index') }}" role="button">Volver</a>
			</div>
		</div>
    {{ form_end(form) }}

{% endblock %}