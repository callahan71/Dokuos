{% extends 'base.html.twig' %}

{% block body %}
    <h1>Materials list</h1>

    <table class="table table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Ref</th>
                <th>Name</th>
                <th>User</th>
                <th>Image</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for material in materials %}
            <tr>
                <td><a href="{{ path('show_material_show', { 'id': material.id }) }}">{{ material.id }}</a></td>
                <td>{{ material.ref }}</td>
                <td>{{ material.name }}</td>
                <td>{{ material.userid }}</td> 
                <td>{{ material.image }}</td>
                <td>
					<a href="{{ path('show_material_show', { 'id': material.id }) }}" type="button" class="btn btn-info" aria-label="Center Align">
						<span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span>
					</a>
					<a href="{{ path('show_material_edit', { 'id': material.id }) }}" type="button" class="btn btn-info" aria-label="Center Align">
						<span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
					</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
		
		<a class="btn btn-primary" href="{{ path('show_material_new') }}">Create a new material</a>

{% endblock %}
