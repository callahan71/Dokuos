{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
		<div class="col-md-10">
			<h1>Material</h1>
		</div>
		<div class="col-md-1">
			<div class="col-md-offset-6 col-md-1">
			    {{ form_start(delete_form) }}
					<button type="submit" class="btn btn-danger">Delete</button>
				{{ form_end(delete_form) }}
			</div>
		</div>
	</div>

    <table class="table table-hover">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ material.id }}</td>
            </tr>
            <tr>
                <th>Ref</th>
                <td>{{ material.ref }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ material.name }}</td>
            </tr>
            <tr>
                <th>User</th>
                <td>{{ material.userid }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ material.image }}</td>
            </tr>
        </tbody>
    </table>
	<a class="btn btn-default" href="{{ path('show_material_index') }}" role="button">Back to the list</a>

	<a class="btn btn-primary" href="{{ path('show_material_edit', { 'id': material.id }) }}" role="button">Edit</a>
	
{% endblock %}
