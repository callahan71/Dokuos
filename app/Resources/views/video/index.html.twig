{% extends 'base.html.twig' %}

{% block body %}
    {% for message in app.flashes('notice') %}
        <div class="alert alert-primary" role="alert">
            {{ message }}
        </div>
    {% endfor %}
    <h1>Videos</h1>

    <table class="table table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Video</th>
                <th>Usuario</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for video in videos %}
            <tr>
                <td><a href="{{ path('show_video_show', { 'id': video.id }) }}">{{ video.id }}</a></td>
                <td>{{ video.video }}</td>
                <td>{{ video.userid }}</td>                
                <td>
					<a data-toggle="tooltip" title="Ver" href="{{ path('show_video_show', { 'id': video.id }) }}" aria-label="Center Align">
						<i class="far fa-eye fa-2x"></i>
					</a>
					<a data-toggle="tooltip" title="Editar" href="{{ path('show_video_edit', { 'id': video.id }) }}" aria-label="Center Align">
						<i class="fas fa-edit fa-2x"></i>
					</a>
                    <a data-toggle="tooltip" title="Borrar" href="{{ path('show_video_delete', { 'id': video.id }) }}" aria-label="Center Align">
						<i class="fas fa-trash-alt fa-2x"></i>
					</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
		
    <a class="color-primary" data-toggle="tooltip" title="Nuevo video" href="{{ path('show_video_new') }}"><i class="fas fa-plus-circle fa-3x"></i></a>
    
{% endblock %}
