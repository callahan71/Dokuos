{% extends 'base.html.twig' %}

{% block body %}
    <h1>Videos list</h1>

    <table class="table table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>User</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for video in videos %}
            <tr>
                <td><a href="{{ path('show_video_show', { 'id': video.id }) }}">{{ video.id }}</a></td>
                <td>{{ video.video }}</td>
                <td>{{ video.userid }}</td>                
                <td>
					<a href="{{ path('show_video_show', { 'id': video.id }) }}" type="button" class="btn btn-info" aria-label="Center Align">
						<span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span>
					</a>
					<a href="{{ path('show_video_edit', { 'id': video.id }) }}" type="button" class="btn btn-info" aria-label="Center Align">
						<span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
					</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
		
		<a class="btn btn-primary" href="{{ path('show_video_new') }}">Create a new video</a>

{% endblock %}
