{% extends 'base.html.twig' %}

{% block body %}
    <h1>Showcases list</h1>

    <table class="table table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Token</th>
                <th>Name</th>
                <th>User</th>
                <th>Image</th>
                <th>Catalogue</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for showcase in showcases %}
            <tr>
                <td><a href="{{ path('show_showcase_show', { 'id': showcase.id }) }}">{{ showcase.id }}</a></td>
                <td>{{ showcase.token }}</td>
                <td>{{ showcase.name }}</td>
                <td>{{ showcase.userid }}</td> 
                <td>{{ showcase.image }}</td> 
                <td>{{ showcase.catalogue }}</td>
                <td>
					<a href="{{ path('show_showcase_show', { 'id': showcase.id }) }}" type="button" class="btn btn-info" aria-label="Center Align">
						<span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span>
					</a>
					<a href="{{ path('show_showcase_edit', { 'id': showcase.id }) }}" type="button" class="btn btn-info" aria-label="Center Align">
						<span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
					</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
		{% if is_granted('ROLE_ADMIN') %}
            <a class="btn btn-primary" href="{{ path('show_showcase_new') }}">Create a new showcase</a>
        {% endif %}

{% endblock %}
