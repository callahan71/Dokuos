{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
		<div class="col-md-10">
			<h1>Editar expositor</h1>
		</div>
		<div class="col-md-1">
			<div class="col-md-offset-6 col-md-1">
			  {{ form_start(delete_form) }}
                <button type="submit" class="btn btn-danger">Borrar</button>
              {{ form_end(delete_form) }}
			</div>
		</div>
	</div>
    
    {{ form_start(edit_form, {'attr': {'class': 'form-horizontal'} }) }}
        <hr>
        <div class="form-group">
			<label class="col-md-4 control-label">Token</label>
			<div class="col-md-5">
			  {{ form_widget(edit_form.token, {'attr': {'class': 'form-control', 'disabled': 'true'}}) }}
			</div>
		</div>
        <div class="form-group">
			<label class="col-md-4 control-label">Nombre</label>
			<div class="col-md-5">
			  {{ form_widget(edit_form.name, {'attr': {'class': 'form-control'}}) }}
			</div>
		</div>
        {% if is_granted('ROLE_ADMIN') %}
        <div class="form-group">
			<label class="col-md-4 control-label">Usuario</label>
			<div class="col-md-5">
			  {{ form_widget(edit_form.userid, {'attr': {'class': 'form-control'}}) }}
			</div>
		</div>
        {% endif %}
        <div class="form-group">
			<label class="col-md-4 control-label">Imagen</label>
			<div class="col-md-5">
			  {{ form_widget(edit_form.image, {'attr': {'class': 'form-control'}}) }}
			</div>
		</div>
        <div class="form-group">
			<label class="col-md-4 control-label">Cat√°logo</label>
			<div class="col-md-5">
			  {{ form_widget(edit_form.catalogue, {'attr': {'class': 'form-control'}}) }}
			</div>
		</div>
		<hr>
        <div class="form-group">
			<div class="col-md-offset-5 col-md-1">
			  <button type="submit" class="btn btn-primary">Editar</button>              
			</div>

			<div class="col-md-1">
			  <a class="btn btn-default" href="{{ path('show_showcase_index') }}" role="button">Volver</a>
			</div>
		</div>
    {{ form_end(edit_form) }}
    
{% endblock %}
