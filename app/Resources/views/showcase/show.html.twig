{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
		<div class="col-md-10">
			<h1>Showcase</h1>
		</div>
		<div class="col-md-1">
			<div class="col-md-offset-6 col-md-1">
			    {{ form_start(delete_form) }}
					<button type="submit" class="btn btn-danger">Delete</button>
				{{ form_end(delete_form) }}
			</div>
		</div>
	</div>

    <table class="table table-hover">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ showcase.id }}</td>
            </tr>
            <tr>
                <th>Token</th>
                <td>{{ showcase.token }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ showcase.name }}</td>
            </tr>
            <tr>
                <th>User</th>
                <td>{{ showcase.userid }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ showcase.image }}</td>
            </tr>
            <tr>
                <th>Catalogue</th>
                <td>{{ showcase.catalogue }}</td>
            </tr>
            
        </tbody>
    </table>
	<a class="btn btn-default" href="{{ path('show_showcase_index') }}" role="button">Back to the list</a>

	<a class="btn btn-primary" href="{{ path('show_showcase_edit', { 'id': showcase.id }) }}" role="button">Edit</a>

    {# Listado de las combinaciones de este expositor #}
    <h2>Combinations list</h2>
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Key</th>
                <th>Material</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for combination in combinations %}
            <tr>
                <td>{{ combination.id }}</td>
                <td>{{ combination.keychar }}</td>
                <td>{{ combination.materialid }}</td> 
                <td>
                    {#
					<a href="{{ path('show_showcase_combination_delete', { 'id': combination.id }) }}" type="button" class="btn btn-info" aria-label="Center Align">
						<span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
					</a>
                    #}
					<a href="{{ path('show_showcase_combination_edit', { 'id': combination.id }) }}" type="button" class="btn btn-info" aria-label="Center Align">
						<span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
					</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
        
    {% if is_granted('ROLE_ADMIN') %}
    {% endif %}
    
    <a class="btn btn-primary" href="{{ path('show_showcase_combination_new', { 'id': showcase.id }) }}" role="button">New</a>
	
{% endblock %}
