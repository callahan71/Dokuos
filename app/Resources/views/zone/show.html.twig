{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
		<div class="col-md-10">
			<h1>Zone</h1>
		</div>
		<div class="col-md-1">
			<div class="col-md-offset-6 col-md-1">
			    {{ form_start(delete_form) }}
					<button type="submit" class="btn btn-danger">Delete</button>
				{{ form_end(delete_form) }}
			</div>
		</div>
	</div>

    <table class="table table-hover">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ zone.id }}</td>
            </tr>
            <tr>
                <th>Model</th>
                <td>{{ zone.modelid }}</td>
            </tr>
            <tr>
                <th>Zone REF</th>
                <td>{{ zone.zoneref }}</td>
            </tr>
            <tr>
                <th>Map</th>
                <td>{{ zone.map }}</td>
            </tr>
        </tbody>
    </table>
	<a class="btn btn-default" href="{{ path('show_model_index') }}" role="button">Back to the list</a>

	<a class="btn btn-primary" href="{{ path('show_model_zone_edit', { 'id': zone.id }) }}" role="button">Edit</a>
    
    {# Listado de los renders de esta zona #}
    <h2>Renders list</h2>
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Image</th>
                <th>Material</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for render in renders %}
            <tr>
                <td>{{ render.id }}</td>
                <td>{{ render.image }}</td>
                <td>{{ render.materialid }}</td>
                <td>
                    {#
					<a href="{{ path('show_model_zone_delete', { 'id': zone.id }) }}" type="button" class="btn btn-info" aria-label="Center Align">
						<span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
					</a>
                    #}
					<a href="{{ path('show_model_zone_render_edit', { 'id': render.id }) }}" type="button" class="btn btn-info" aria-label="Center Align">
						<span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
					</a>
                    
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
        
    {% if is_granted('ROLE_USER') %}        
        <a class="btn btn-primary" href="{{ path('show_model_zone_render_new', { 'id': zone.id }) }}" role="button">New</a>           
    {% endif %}  
	
{% endblock %}
