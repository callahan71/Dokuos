{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
		<div class="col-md-10">
			<h1>Categor√≠a</h1>
		</div>
		<div class="col-md-1">
			<div class="col-md-offset-6 col-md-1">
			    {{ form_start(delete_form) }}
					<button type="submit" class="btn btn-danger">Borrar</button>
				{{ form_end(delete_form) }}
			</div>
		</div>
	</div>

    <table class="table table-hover">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ category.id }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ category.name }}</td>
            </tr>
            <tr>
                <th>Imagen</th>
                <td><img alt="{{ category.name }}" src="{{ asset('uploads/SET-CAT/' ~ category.image) }}" width="100" border="2" /></td>
            </tr>
        </tbody>
    </table>
	<a class="btn btn-default" href="{{ path('show_category_index') }}" role="button">Volver</a>

	<a class="btn btn-primary" href="{{ path('show_category_edit', { 'id': category.id }) }}" role="button">Editar</a>
	
{% endblock %}
